datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

generator dbml {
  provider = "prisma-dbml-generator"
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
  name      String?
  city      String?
  photo     String
  rewards   Reward[]
}

model Reward {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  // updatedAt  DateTime @updatedAt
  rewardCode String
  author     User?    @relation(fields: [authorId], references: [id])
  authorId   String?
}

